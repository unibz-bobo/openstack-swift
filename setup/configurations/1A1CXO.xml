<?xml version="1.0" encoding="UTF-8"?>
<!--
     Description:
     Read filename
     This is an "unbalanced" topology were we have several object nodes while
     having a single account node and a single container node
     We have 7 proxy servers
     Single zone, single region
 -->
<cluster>
    <swift>

        <git-source>
            <python-swiftclient>
                <release>2.5.0</release>
            </python-swiftclient>

            <swift>
                <release>2.5.0</release>
            </swift>
        </git-source>

        <storage>
            <block_device_path required="no"></block_device_path>
            <filesystem>XFS</filesystem>
        </storage>

        <node>
            <!--
                 Does the script have to create separate zones?
                 At the moment, a zone is a single group account-container-object.
            -->
            <create_zones>no</create_zones>
            <!-- Replication count. -->
            <replication_count>3</replication_count>
            <!-- Partiton power (2^n). -->
            <partition_count>7</partition_count>
        </node>

        <balancer-server>
            <node>
                <ip_address>10.10.242.55</ip_address>
            </node>
        </balancer-server>

        <!-- Specific settings for proxy. -->
