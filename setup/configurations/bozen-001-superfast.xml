            <node>
                <ip_address>10.10.241.211</ip_address>
            </node>

            <node>
                <ip_address>10.10.241.212</ip_address>
            </node>
        </proxy-server>

        <!-- Specific settings for storage. -->        
        <account-server>
            <node>
                <ip_address>10.10.241.213</ip_address>
            </node>
        </account-server>

        <container-server>
            <node>
                <ip_address>10.10.241.213</ip_address>
